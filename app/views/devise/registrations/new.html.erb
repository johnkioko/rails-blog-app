<%= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="central">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
<h3 class="h3 mb-3 fw-normal">Sign up</h3>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "User Name", class: "form-control" %>
  </div>

  <div class="">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
  </div>

  <div class="">
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Enter minimum 6 digit password", class: "form-control" %>
  </div>

  <div class="">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Re-enter the password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "w-100 btn btn-lg btn-primary" %>
  </div>
<% end %>

</div>

<%= render "devise/shared/links" %>